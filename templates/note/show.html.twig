{% extends 'base.html.twig' %}

{% block title %}Заметки{% endblock %}

{% block body %}
    <h1>Заметки</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ note.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ note.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ note.content }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ note.createdAt ? note.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_note_index') }}">Вернуться к списку</a>

    <a href="{{ path('app_note_edit', {'id': note.id}) }}">Редактировать</a>

    {{ include('note/_delete_form.html.twig') }}
{% endblock %}
