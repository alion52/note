{% extends 'base.html.twig' %}

{% block title %}Редактирование заметки{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Редактирование заметки</h1>

        <div class="row">
            <div class="col-md-8 offset-md-2">
                <!-- Форма редактирования -->
                <div class="card mb-4">
                    <div class="card-body">
                        {{ include('note/_form.html.twig', {'button_label': 'Update', 'button_class': 'btn btn-primary'}) }}
                    </div>
                </div>

                <!-- Кнопки для возврата и удаления -->
                <div class="d-flex justify-content-between">
                    <a href="{{ path('app_note_index') }}" class="btn btn-secondary">Вернуться к списку</a>

                    <div>
                        {{ include('note/_delete_form.html.twig', {'button_class': 'btn btn-danger'}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
